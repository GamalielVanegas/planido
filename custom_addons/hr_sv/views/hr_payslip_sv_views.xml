<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- FORM view for Planilla -->
    <record id="view_hr_payslip_sv_form" model="ir.ui.view">
        <field name="name">hr.payslip.sv.form</field>
        <field name="model">hr.payslip.sv</field>
        <field name="arch" type="xml">
            <form string="Planilla">
                <header>
                    <button name="action_marcar_finalizado"
                            string="Finalizar"
                            type="object"
                            class="btn-success"
                            attrs="{'invisible': [('state','=','done')]}"/>

                    <button name="action_calcular_planilla"
                            type="object"
                            string="Calcular Planilla"
                            class="btn-primary"
                            attrs="{'invisible': [('state','=','done')]}"/>
                    <button name="action_exportar_spu"
                            type="object"
                            string="Exportar SPU"
                            class="btn-secondary"
                            attrs="{'invisible': [('state', '!=', 'done')]}"/>
                </header>

                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="period_type"/>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="state" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Líneas de Planilla">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="employee_id"/>
                                    <field name="wage" readonly="1"/>
                                    <field name="isss"/>
                                    <field name="afp"/>
                                    <field name="renta"/>
                                    <field name="total_descuentos"/>
                                    <field name="neto_pagar"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="employee_id"/>
                                        <field name="wage" readonly="1"/>
                                        <field name="isss"/>
                                        <field name="afp"/>
                                        <field name="renta"/>
                                        <field name="total_descuentos"/>
                                        <field name="neto_pagar"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREE view -->
    <record id="view_hr_payslip_sv_tree" model="ir.ui.view">
        <field name="name">hr.payslip.sv.tree</field>
        <field name="model">hr.payslip.sv</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="period_type"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- FORM view for lines -->
    <record id="view_hr_payslip_sv_line_form" model="ir.ui.view">
        <field name="name">hr.payslip.sv.line.form</field>
        <field name="model">hr.payslip.sv.line</field>
        <field name="arch" type="xml">
            <form string="Línea de Planilla">
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="wage" readonly="1"/>
                        <field name="isss"/>
                        <field name="afp"/>
                        <field name="renta"/>
                        <field name="total_descuentos"/>
                        <field name="neto_pagar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_hr_sv_root" name="Planilla SV" sequence="10"/>

    <!-- Acción -->
    <record id="action_hr_payslip_sv" model="ir.actions.act_window">
        <field name="name">Planillas</field>
        <field name="res_model">hr.payslip.sv</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_hr_payslip_sv" name="Planillas" parent="menu_hr_sv_root" action="action_hr_payslip_sv"/>
</odoo>

